<assembly
		xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
            <directory>liquibase-3</directory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
		<fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>liquibase-3</outputDirectory>
            <includes>
                <include>liquibase-i2b2export.properties</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>com.oracle:ojdbc6</include>
			</includes>
			<unpack>false</unpack>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:*:war</include>
			</includes>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<unpack>false</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:*:zip</include>
			</includes>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>
</assembly>